<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!-- Button Styles -->
    <style name="Button" parent="Base.Widget.AppCompat.Button.Colored"/>

    <style name="Button.Primary">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="Button.Transparent" parent="Widget.AppCompat.Button.Borderless"/>

    <style name="Button.Transparent.Inverse" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/TextAppearance.Inverse</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance" parent="TextAppearance.AppCompat.Medium"/>
    <style name="TextAppearance.Inverse" parent="TextAppearance.AppCompat.Medium.Inverse"/>

    <style name="TextAppearance.Emphasis" parent="TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
